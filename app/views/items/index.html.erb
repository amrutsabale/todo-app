<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1> All Todos</h1>
</div>
<hr style= "border-top: 1px solid white;">
<% @items.each do |item| %>
        <h3><%= item.item %>
        <%= link_to '<i class="fas fa-pencil-alt"></i>'.html_safe, edit_item_path(item) %>
        <%= link_to '<i class="fas fa-check"></i>'.html_safe, item, method: :delete, data: { confirm: 'Are you sure?' } %></h3>
<% end %>

<br>

<%= link_to 'New Item', new_item_path %>
